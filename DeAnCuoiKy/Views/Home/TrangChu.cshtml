<style type="text/css">
    .product-d {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .product-d h1{
        text-align: center;
        margin-bottom: 40px;
        font-size: 36px;
        color: #333;
    }

    .shoe-display {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
    }

    .shoe-item {
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        text-align: center;
        transition: transform 0.3s ease;
    }

        .shoe-item:hover {
            transform: translateY(-10px);
        }

        .shoe-item img {
            width: 100%;
            height: auto;
        }

        .shoe-item h3 {
            font-size: 20px;
            margin: 15px 0;
            color: #333;
        }

        .shoe-item p {
            font-size: 18px;
            color: #ff4d4d;
            margin-bottom: 15px;
        }

    .buy-now {
        display: inline-block;
        margin-bottom: 15px;
        padding: 10px 20px;
        background-color: #ff4d4d;
        color: white;
        text-transform: uppercase;
        font-size: 14px;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .buy-now:hover {
            background-color: #ff3333;
        }
</style>

@{
    Layout = "~/Views/Shared/MasterLayout.cshtml";
}
<div class="product-d">
    <h1>Những Sản Phẩm Mới Nhất Của Chúng Tôi</h1>
